<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Panel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    html { scroll-behavior: smooth; }
    .fade { animation: fadein 1s ease-in-out; }
    @keyframes fadein {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body class="bg-gray-900 text-white font-sans p-4">

  <header class="sticky top-0 z-50 bg-gray-800 p-4 rounded shadow mb-4">
    <h1 class="text-2xl font-bold text-center">🌐 Admin Panel</h1>
  </header>

  <main class="space-y-6 max-w-2xl mx-auto fade">

    <!-- Add Coins -->
    <section>
      <h2 class="text-xl font-semibold">➕ Add Coins</h2>
      <div class="flex flex-col md:flex-row gap-2 mt-2">
        <input id="coinUsername" placeholder="Username" class="text-black p-2 rounded flex-1" />
        <input id="coinAmount" type="number" placeholder="Amount" class="text-black p-2 rounded flex-1" />
        <button onclick="addCoins()" class="bg-green-500 hover:bg-green-600 p-2 rounded">Add</button>
      </div>
    </section>

    <!-- Search User -->
    <section>
      <h2 class="text-xl font-semibold">🔎 Search User</h2>
      <div class="flex flex-col md:flex-row gap-2 mt-2">
        <input id="searchUsername" placeholder="Username" class="text-black p-2 rounded flex-1" />
        <button onclick="searchUser()" class="bg-blue-500 hover:bg-blue-600 p-2 rounded">Search</button>
      </div>
      <pre id="userResult" class="bg-gray-800 mt-2 p-3 rounded text-sm overflow-auto"></pre>
    </section>

    <!-- All Users -->
    <section>
      <h2 class="text-xl font-semibold">👥 All Users</h2>
      <button onclick="loadUsers()" class="bg-indigo-500 hover:bg-indigo-600 px-4 py-2 rounded mb-2">Load Users</button>
      <ul id="userList" class="bg-gray-800 p-3 rounded max-h-60 overflow-y-auto text-sm space-y-1"></ul>
    </section>

    <!-- All Bots -->
    <section>
      <h2 class="text-xl font-semibold">🤖 All Bots</h2>
      <button onclick="loadBots()" class="bg-yellow-500 hover:bg-yellow-600 px-4 py-2 rounded mb-2">Load Bots</button>
      <ul id="botList" class="bg-gray-800 p-3 rounded max-h-60 overflow-y-auto text-sm space-y-1"></ul>
    </section>

    <!-- Files -->
    <section>
      <h2 class="text-xl font-semibold">📁 Files</h2>
      <button onclick="loadFiles()" class="bg-purple-500 hover:bg-purple-600 px-4 py-2 rounded mb-2">Load Files</button>
      <ul id="fileList" class="bg-gray-800 p-3 rounded max-h-60 overflow-y-auto text-sm space-y-1"></ul>
    </section>

  </main>

  <!-- Back to Top -->
  <footer class="text-center mt-10">
    <a href="#" class="text-blue-400 hover:underline">🔝 Back to Top</a>
  </footer>

  <script>
    async function addCoins() {
      const username = document.getElementById('coinUsername').value;
      const amount = parseInt(document.getElementById('coinAmount').value);
      const res = await fetch('/api/admin/add-coins', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, amount })
      });
      const data = await res.json();
      alert(data.message);
    }

    async function loadUsers() {
      const res = await fetch('/api/admin/all-users');
      const users = await res.json();
      const userList = document.getElementById('userList');
      userList.innerHTML = '';
      users.forEach(u => {
        const li = document.createElement('li');
        li.innerHTML = `${u.username} - ${u.coins} coins <button onclick="deleteUser('${u.username}')" class="text-red-400 ml-2 underline">Delete</button>`;
        userList.appendChild(li);
      });
    }

    async function deleteUser(username) {
      if (!confirm(`Delete user ${username}?`)) return;
      const res = await fetch('/api/admin/delete-user', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username })
      });
      const data = await res.json();
      alert(data.message);
      loadUsers();
    }

    async function searchUser() {
      const username = document.getElementById('searchUsername').value;
      const res = await fetch(`/api/admin/user/${username}`);
      const data = await res.json();
      const box = document.getElementById('userResult');
      box.textContent = data.status ? JSON.stringify(data.user, null, 2) : data.message;
    }

    async function loadBots() {
      const res = await fetch('/api/admin/all-bots');
      const bots = await res.json();
      const botList = document.getElementById('botList');
      botList.innerHTML = '';
      bots.forEach(b => {
        const li = document.createElement('li');
        li.innerHTML = `${b.name} | ${b.byUser} | ${b.status}
          <button onclick="deleteBot('${b.name}', '${b.byUser}')" class="text-red-400 ml-2 underline">Delete</button>`;
        botList.appendChild(li);
      });
    }

    async function deleteBot(appName, username) {
      const res = await fetch('/api/delete-bot', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ appName, username })
      });
      const data = await res.json();
      alert(data.message);
      loadBots();
    }

    async function loadFiles() {
      const res = await fetch('/api/admin/files');
      const files = await res.json();
      const fileList = document.getElementById('fileList');
      fileList.innerHTML = '';
      files.forEach(f => {
        const li = document.createElement('li');
        li.innerHTML = `${f}
          <button onclick="deleteFile('${f}')" class="text-red-400 ml-2 underline">Delete</button>`;
        fileList.appendChild(li);
      });
    }

    async function deleteFile(name) {
      const res = await fetch('/api/admin/delete-file', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name })
      });
      const data = await res.json();
      alert(data.message);
      loadFiles();
    }
  </script>
</body>
</html>